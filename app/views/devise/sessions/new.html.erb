<h1> <%= link_to root_path do %>
 <i class="fa-solid fa-chevron-left" style="color: #03264e; padding-left: 22px"> </i>
 <% end %>
 </h1>
<div class="form">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, placeholder: "Email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder: "Password" %>
  </div>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>
</div>
<span class="form-span"><%= render "devise/shared/links" %> <span>
