<div id="groups">
<% if user_signed_in? %>
<%= button_to 'Sign Out', destroy_user_session_path, method: :delete %>
  <% @groups.each do |group| %>
    <%= render group %>
    <p>
      <%= link_to "Show this group", group %>
    </p>
  <% end %>
 <% else %>
 <span class="sign-link"> <strong> <%= link_to 'Sign In', new_user_session_path %> </span>
 <span class="sign-link"> <%= link_to 'Sign Up', new_user_registration_path %></strong> </span>
 <% end %> 
</div>
